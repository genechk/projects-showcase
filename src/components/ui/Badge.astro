---
export type Props = {
  variant: 'large' | 'medium'
}

const { variant } = Astro.props
---

<>
  {
    variant === 'large' && (
      <div class="badge select-none rounded-none px-2 pb-4 pt-3.5 text-xl text-white md:pb-[1.125rem] md:pt-4 md:text-2xl">
        <slot />
      </div>
    )
  }
  {
    variant === 'medium' && (
      <div class="badge select-none rounded-none px-2 pb-3.5 pt-3 text-white md:badge-lg">
        <slot />
      </div>
    )
  }
</>
