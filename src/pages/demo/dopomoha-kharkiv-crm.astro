---
import Assets from 'dopomoha-kharkiv-crm-ui/demo/Assets.astro'
import { AnalyticsScript, HeapAnalytics } from '@components'

const baseURL = import.meta.env.BASE_URL
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${baseURL}/favicon.svg`}
    />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Humanitarian Aid Appeals CRM | Demo by Genek Tomashko</title>
    <script>
      import 'dopomoha-kharkiv-crm-ui'
    </script>
    <Assets />
    <HeapAnalytics />
  </head>
  <body>
    <AnalyticsScript />
    <div id="app"></div>

    <script>
      import favicon from 'dopomoha-kharkiv-crm-ui/public/favicon.ico'

      window.onload = () => {
        let link = document.querySelector<HTMLLinkElement>("link[rel~='icon']")

        if (!link) {
          link = document.createElement('link')
          link.rel = 'icon'
          document.head.appendChild(link)
        }

        link.href = favicon
        link.type = 'image/ico'
      }
    </script>
  </body>
</html>
